@model IEnumerable<Item> 
@{
    ViewData["Title"] = "Index";
}

<h1>Items View</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Item Price
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model)
       {
            <tr>
                <td width="50%">
                   @item.name
                </td>
                <td width="30%">
                    @item.price
                </td>
            </tr>
        }
    </tbody>
</table>

